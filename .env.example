# Islamic Quiz Card Game - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/islamicquiz
MONGODB_USER=
MONGODB_PASS=

# Redis Configuration (for real-time game state)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Game Configuration
MAX_PLAYERS_PER_ROOM=4
DEFAULT_QUESTION_TIME_LIMIT=30
DEFAULT_QUESTIONS_PER_GAME=20
ROOM_CLEANUP_INTERVAL=300000

# Content Configuration
QUESTIONS_CACHE_TTL=3600
ENABLE_CONTENT_VALIDATION=true
SCHOLAR_APPROVAL_REQUIRED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_REQUEST_LOGGING=true

# External Services (Optional)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@ummah360.com
SENTRY_DSN=
ANALYTICS_ID=

# Development Only
DEBUG=false
ENABLE_CORS_DEBUGGING=false
MOCK_ISLAMIC_CONTENT=false

# Production Only (Set these in production)
SESSION_SECRET=
SECURE_COOKIES=true
TRUST_PROXY=false

# Mobile App Configuration
APP_NAME=Islamic Quiz Card Game
APP_ID=com.ummah360.islamicquiz
APP_VERSION=1.0.0

# Social Features (Future)
ENABLE_CHAT=true
ENABLE_TOURNAMENTS=true
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARDS=true

# Monitoring (Optional)
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=false
PROMETHEUS_PORT=9090

# Content Sources (URLs for Islamic content APIs - if using external sources)
QURAN_API_URL=
HADITH_API_URL=
ISLAMIC_CALENDAR_API_URL=

# Admin Features
ADMIN_PANEL_ENABLED=false
ADMIN_SECRET_KEY=

# Performance Tuning
MAX_CONCURRENT_GAMES=1000
MEMORY_LIMIT_MB=512
CPU_LIMIT_PERCENT=80

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30